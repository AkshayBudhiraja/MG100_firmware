{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "windows": {
    "options": {
      "shell": {
        "executable": "cmd.exe",
        "args": ["/d", "/c"]
      }
    }
  },
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      // Linux based command is not tested
      "command": "west build -b mg100 -d build mg100",
      "windows": {
        "command": "west build -b mg100 -d ${workspaceRoot}\\build ${workspaceRoot}\\mg100"
      },
      "problemMatcher": []
    },
    {
      "label": "re-build",
      "type": "shell",
      // Linux based command is not tested
      "command": "west build -p -b mg100 -d build mg100",
      "windows": {
        "command": "west build -p -b mg100 -d ${workspaceRoot}\\build ${workspaceRoot}\\mg100"
      },
      "problemMatcher": []
    },
    {
      "label": "build-lwm2m",
      "type": "shell",
      "command": "west build -b mg100 -d build mg100 -DCONF_FILE=prj.conf;overlay_lwm2m_dtls.conf",
      "windows": {
        "command": "west build -b mg100 -d ${workspaceRoot}\\build ${workspaceRoot}\\mg100 -- -DCONF_FILE=${workspaceRoot}\\mg100\\prj.conf;${workspaceRoot}\\mg100\\overlay_lwm2m_dtls.conf"
      },
      "problemMatcher": {
        "base": "$gcc",
        "fileLocation": "absolute"
      }
    },
    {
      "label": "flash application",
      "type": "shell",
      // Linux based command is not tested
      "command": "west flash -d build && nrfjprog -f NRF52 --reset",
      "windows": {
        "command": "west flash -d ${workspaceRoot}\\build && nrfjprog -f NRF52 --reset"
      },
      "problemMatcher": []
    },
    {
      "label": "clean",
      "type": "shell",
      // Linux based command is not tested
      "command": "west build -t clean -d build",
      "windows": {
        "command": "west build -t clean -d ${workspaceRoot}\\build"
      },
      "problemMatcher": []
    },
    {
      "label": "pristine",
      "type": "shell",
      // Linux based command is not tested
      "command": "west build -t pristine -d build",
      "windows": {
        "command": "west build -t pristine -d ${workspaceRoot}\\build"
      },
      "problemMatcher": []
    }
  ]
}
